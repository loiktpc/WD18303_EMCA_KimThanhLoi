{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "array-callback-return": [
            "error",
            "always"
        ],
        "constructor-super": [
            "error",
            "always"
        ],
        "for-direction": [
            "error",
            "always"
        ],
        "getter-return": [
            "error",
            "always"
        ],
        "no-async-promise-executor": [
            "error",
            "always"
        ],"no-await-in-loop": [
            "error",
            "always"
        ],
    }
}
